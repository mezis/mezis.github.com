.post
  .post-banner
    .post-date
      {{ page.date | date: "%e %B %Y" }}
    %ul.taglist
      {% for tag in page.tags %}
      %li.tag
        {{ tag }}
      {% endfor %}
  %h3
    %a{ :href => "{{ BASE_PATH }}{{ page.url }}" }
      {{ page.title }}
  .content
    {% if page.summary %}
    {{ page.summary | markdownify }}
    %a.read{:href => "{{ BASE_PATH }}{{ page.url }}"} Read the full article â†’
    {% else %}
    {{ page.content | markdownify }}
    {% endif %}