.container
  %nav.navbar.navbar-default.navbar-fixed-top#header{ role: 'navigation' }

    .navbar-header.dc-title.visible-xs.visible-sm
      %a.navbar-brand{href: "/"}
        {{ site.title }}

    .navbar-header.dc-title.hidden-xs.hidden-sm
      %a.navbar-brand{href: "/"}
        {{ site.title }}
        %span.dc-tagline
          â˜›
          {{ site.tagline }}

    %ul.nav.navbar-nav.navbar-right.hidden-xs<>
      %li<>
        %a.navbar-link{href: "http://github.com/{{ site.author.github }}", title: "Find me on Github" }
          %i.icon-github
      %li<>
        %a.navbar-link{href: "http://twitter.com/{{ site.author.twitter }}", title: "Follow me on Twitter" }
          %i.icon-twitter
      %li<>
        %a.navbar-link{href: "http://linkedin.com/in/{{ site.author.linkedin }}", title: "Find me on LinkedIn"}
          %i.icon-linkedin
      %li<>
        %a.navbar-link{ href: "https://plus.google.com/{{ site.author.googleplus_id }}?rel=author", title: "Follow me on Google+", rel: 'author' }
          %i.icon-google-plus-sign
      %li<>
        %a.navbar-link{href: "{{ site.url }}/atom.xml", title: "Stay updated"}
          %i.icon-rss
    %a.navbar-right{ href: '#header' }

